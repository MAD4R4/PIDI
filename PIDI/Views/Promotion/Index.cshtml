@model IEnumerable<PIDI.Models.Admin.PromotionModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreatePromotion")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PromotionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.discountAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InitDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PromotionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.discountAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InitDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPromotion", new { id = item.id }) |
            @Html.ActionLink("Details", "PromotionDetails", new { id = item.id}) |
            @Html.ActionLink("Delete", "DeletePromotion", new { id= item.id })
        </td>
    </tr>
}

</table>
