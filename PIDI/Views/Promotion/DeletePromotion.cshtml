@model PIDI.Models.Admin.PromotionModel

@{
    ViewBag.Title = "DeletePromotion";
}

<div class="container">
    <h2>Excluir promoção</h2>
    &nbsp
    <h3>Tem certeza que deseja excluir essa promoção?</h3>
    <di>
        <hr />
        <div class="row">
            <div class="col-lg-2 border-bottom  text-monospace h4 font-weight-bold">
                @Html.DisplayNameFor(model => model.PromotionName)
            </div>
            <div class="col-lg-10 border-bottom text-monospace h4">
                @Html.DisplayFor(model => model.PromotionName)
            </div>
            <div class="col-lg-2 border-bottom  text-monospace h4 font-weight-bold">
                @Html.DisplayNameFor(model => model.discountAmount)
            </div>
            <div class="col-lg-10 border-bottom text-monospace h4">
                @Html.DisplayFor(model => model.discountAmount)
            </div>
            <div class="col-lg-2 border-bottom  text-monospace h4 font-weight-bold">
                @Html.DisplayNameFor(model => model.InitDate)
            </div>
            <div class="col-lg-10 border-bottom text-monospace h4">
                @Html.DisplayFor(model => model.InitDate)
            </div>
            <div class="col-lg-2 border-bottom  text-monospace h4 font-weight-bold">
                @Html.DisplayNameFor(model => model.EndDate)
            </div>
            <div class="col-lg-10 border-bottom text-monospace h4">
                @Html.DisplayFor(model => model.EndDate)
            </div>
            &nbsp
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    @Html.ActionLink("Retornar", "Index", null, new { @class = "btn btn-info btn-lg" })&nbsp &nbsp &nbsp
                    <input type="submit" value="Excluir" class="btn btn-info btn-lg" />
                </div>
            }
        </div>
</div>
