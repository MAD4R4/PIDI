@model PIDI.Models.CategoryModel

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <h2>Excluir categoria</h2>

    <div>

        <hr />

        <div class="row">
            <div class="col-lg-2 border-bottom  text-monospace h4 font-weight-bold">
                @Html.DisplayNameFor(model => model.CategoryName)
            </div>
            <div class="col-lg-10 border-bottom text-monospace h4">
                |@Html.DisplayFor(model => model.CategoryName)
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2 border-bottom  text-monospace h4 font-weight-bold">
                @Html.DisplayNameFor(model => model.CategoryDescription)
            </div>
            <div class="col-lg-10 border-bottom text-monospace h4">
                |@Html.DisplayFor(model => model.CategoryDescription)
            </div>
        </div> &nbsp
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Retornar", "Index", null, new { @class = "btn btn-info btn-lg" })&nbsp &nbsp &nbsp
                <input type="submit" value="Excluir" class="btn btn-info btn-lg" />

            </div>
        }
    </div>
</div> 